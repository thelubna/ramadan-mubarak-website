/* styles.css */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f4f8;
    color: #333;
    text-align: center;
}

header {
    background-color: #2d6a4f;
    color: #fff;
    padding: 50px 20px;
}

header h1 {
    font-size: 3em;
    margin: 0;
}

header p {
    font-size: 1.2em;
}

h2 {
    font-size: 2em;
    color: #2d6a4f;
    margin-bottom: 20px;
}

section {
    padding: 40px 20px;
}

#countdown {
    margin-top: 30px;
}

#countdown-timer {
    font-size: 1.8em;
    font-weight: bold;
    color: #e63946;
}

footer {
    background-color: #2d6a4f;
    color: #fff;
    text-align: center;
    padding: 20px 0;
}

a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
}
